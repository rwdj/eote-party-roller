<div class='dice-selection'>
    <% DieTypes::PAIRS.each do |group| %>
    <div class='group'>
      <% group.each do |die_type| %>
        <% next unless die_type %>
        <div class='dice <%= die_type %>' data-die-name='<%= die_type %>'>
          <div class='die <%= die_type %> faded'></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="block-field" hidden>
  <%= form.text_field :json_dice, id: :dice_pool_dice %>
</div>
